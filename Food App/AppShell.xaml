<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Food_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Food_App.View"
    Shell.FlyoutBehavior="Disabled"
    Title="Food_App"
    Shell.TabBarIsVisible="True"
    Shell.NavBarIsVisible="False"
    >
    <!--<ShellContent Title="Main"
              ContentTemplate="{DataTemplate view:MainPage}"/>-->
    
    <TabBar>
        
        <ShellContent Title="Home"
                      Icon="home.png"
                      ContentTemplate="{DataTemplate view:HomePage}"
                      Route="home"/>

        <ShellContent Title="Search"
                      Icon="search_icon.png"
                      ContentTemplate="{DataTemplate view:HomePage}"/>

        <ShellContent Title="Favorite"
                      Icon="favs.png"
                      ContentTemplate="{DataTemplate view:Favorites}"/>

        <ShellContent Title="Checkout"
                      Icon="shopping_icon.png"
                      ContentTemplate="{DataTemplate view:CheckOutPage}"/>

    </TabBar>

</Shell>
