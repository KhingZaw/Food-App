<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Food_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Food_App.View"
    Shell.FlyoutBehavior="Flyout"
    Title="Food_App"
    Shell.TabBarIsVisible="True"
    Shell.NavBarIsVisible="False"
    >

    <!--<ShellContent ContentTemplate="{DataTemplate view:MainPage}"/>-->

    <TabBar>
        
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate view:HomePage}"/>
        
        <ShellContent Title="Search"
                      ContentTemplate="{DataTemplate view:HomePage}"/>

        <ShellContent Title="Favorite"
                      ContentTemplate="{DataTemplate view:HomePage}"/>
        
        <ShellContent Title="History"
                      ContentTemplate="{DataTemplate view:HomePage}"/>
        
    </TabBar>

</Shell>
